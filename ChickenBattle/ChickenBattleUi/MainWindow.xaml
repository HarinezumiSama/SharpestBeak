<Window x:Class="ChickenBattleUi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Controls="clr-namespace:ChickenBattleUi.Controls"
        Title="Chicken Fights" Height="600" Width="600" WindowStartupLocation="CenterScreen" Loaded="MainWindowLoaded">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Exit" Command="{Binding ExitCommand}"></MenuItem>
            </MenuItem>
            <MenuItem Header="Game"></MenuItem>
        </Menu>
        <Grid DockPanel.Dock="Bottom" ShowGridLines="True" x:Name="_mainGrid">
        </Grid>
    </DockPanel>
</Window>
